<div class="container-fluid">

  <div class="row">
      <div class="col" align="center" border=1000px>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id='b1'>
          <%= t(:'Добавить исполнителя') %>
        </button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> <%= t(:'Добавить исполнителя') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for Singer.new do |f| %>

            <div class="field">
              <%= f.label :name%>
              <%= f.text_field :name, :placeholder=> t(:'Исполнитель') %>
            </div>

            <div class="field">
              <%= f.label :description%>
              <%= f.text_field :description, :placeholder=> t(:'Описание') %>
            </div>

            <div class="field">
              <%= f.label :image%>
              <%= f.file_field :image%>
            </div>

            <div class="actions">
              <%= f.submit t(:'Добавить')%>
            </div>
          <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal"  ><%= t(:'Закрыть')%></button>
      </div>
    </div>
  </div>
</div>
      </div>
    </div>
    <div class="row">
      <%= render @singers %>
    </div>

</div>
